%h1 Drinks
%div.mb_20
  %a.btn.btn-primary{'data-route' => 'routes.drinks.new'} New Drink
%table.index.table.table-bordered.table-striped
  %thead
    %tr
      %th Name
      %th Size
      %th Price
  %tbody
    %tr{'data-foreach-drink' => 'drinks'}
      %td{'data-bind' => 'drink.name'}
      %td{'data-mixin' => 'capitalize', 'data-bind' => 'drink.size'}
      %td{'data-bind' => 'drink.price', 'data-mixin' => 'priceFormat'}
      %td
        %a.btn.btn-warning{'data-route' => 'routes.drinks[drink].edit'} Edit
      %td
        %a.btn.btn-danger{'data-event-click' => 'drink.delete'} Delete